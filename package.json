{
  "name": "tax-net",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "dev": "cross-env BABEL_ENV=development webpack-dev-server --config webpack.config.dev.babel.js --open",
    "build": "cross-env BABEL_ENV=production webpack --config webpack.config.prod.babel.js",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "eslint": "eslint --debug src/",
    "eslint-fix": "eslint --debug src/ --fix",
    "lint:style": "stylelint --ignore-path '.stylelintignore' \"{src/styles/**/*,*}.{css,scss}\"",
    "format:style": "prettier --write \"{src/styles/**/*,*}.{css,scss}\" && stylelint --ignore-path '.stylelintignore' \"{src/styles/**/*,*}.{css,scss}\" --fix",
    "format:prettier": "prettier --write {src/**/*,*}.{js,jsx}"
  },
  "private": true,
  "homepage": "http://richpull.github.io/taxnext",
  "author": "Bulat Sharipov",
  "license": "MIT",
  "browserslist": [
    "> 1%",
    "last 3 version"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "./src/**/*.{js,jsx}": [
        "prettier --write",
        "git add"
      ],
      "/src/styles/**/*.css": [
        "prettier --write",
        "stylelint --fix",
        "git add"
      ],
      "/src/styles/**/*.scss": [
        "prettier --write",
        "stylelint --fix --syntax=scss",
        "git add"
      ]
    },
    "ignore": [
      "node_modules",
      "build",
      "src/styles/mixins"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/node": "^7.2.2",
    "@babel/plugin-syntax-dynamic-import": "^7.7.4",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "^9.4.7",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.5",
    "babel-plugin-styled-components": "^1.10.6",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "clean-webpack-plugin": "^1.0.1",
    "copy-webpack-plugin": "^4.6.0",
    "core-js": "^2.6.11",
    "cross-env": "^7.0.0",
    "css-loader": "^2.1.0",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^4.1.10",
    "dotenv-webpack": "^1.7.0",
    "eslint": "^6.8.0",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-react-hooks": "^2.4.0",
    "favicons-webpack-plugin": "^3.0.1",
    "file-loader": "^3.0.1",
    "gh-pages": "^2.2.0",
    "html-webpack-plugin": "^4.0.0-beta.11",
    "husky": "^4.2.3",
    "imagemin-webpack-plugin": "^2.4.2",
    "lint-staged": "^10.0.7",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.13.1",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "path": "^0.12.7",
    "postcss-loader": "^3.0.0",
    "postcss-plugin-px2rem": "^0.8.1",
    "prettier": "^1.19.1",
    "prop-types": "^15.7.2",
    "react-hot-loader": "^4.6.5",
    "redux-devtools-extension": "^2.13.8",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "stylelint": "^13.2.0",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-order": "^4.0.0",
    "stylelint-scss": "^3.14.2",
    "terser-webpack-plugin": "^2.3.1",
    "webpack": "^4.29.5",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.1.14"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "connected-react-router": "^6.7.0",
    "css-reset-and-normalize": "^2.1.0",
    "firebase": "^7.8.2",
    "history": "^4.10.1",
    "query-string": "^6.10.1",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "react-redux": "^7.1.3",
    "react-router-dom": "^5.1.2",
    "react-string-replace": "^0.4.4",
    "redux": "^4.0.5",
    "reselect": "^4.0.0",
    "redux-thunk": "^2.3.0"
  }
}
